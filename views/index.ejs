<!DOCTYPE html>
<html ng-app="skill">
  <head>
    <title>Skill Swap</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.4/paper/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/sweetalert.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="background-image">
    <div class="container-fluid">
      <div ng-controller="NavCtrl">
        <!-- Navbar -->
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="navbar-header">
            <h3 ui-sref="market" class="logo">Skill Swap</h3>
          </div>
          <ul class="nav navbar-nav navbar-right" id="nav-links">
            <li><a ui-sref="profile({ id: profile._id })" ng-show="currentUserData.loggedIn"><i class="fa fa-user"></i> Profile</a></li>
            <li><a data-toggle="modal" data-target="#post"><i class="fa fa-plus"></i> Post</a></li>
            <li><a href="/auth/google"><i class="fa fa-google-plus"> login</i></a></li>
            <li><a ng-click="logout()" ng-show="currentUserData.loggedIn"><i class="fa fa-sign-out"></i> Logout</a></li>
          </ul>
        </nav>
        <!-- Create Post Modal -->
        <div class="modal fade" id="post" tabindex="-1" role="dialog">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Create New Post</h4>
              </div>
              <div class="modal-body">
                <form class="form-group" ng-show="currentUserData.loggedIn">
                  <select class="form-control" ng-model="skill.skillCategory" required>
                    <option value="" disabled>Skill Category</option>
                    <option value="Programming">Programming</option>
                    <option value="Cooking">Cooking</option>
                    <option value="Music">Music</option>
                    <option value="Sport">Sport</option>
                    <option value="Other">Other</option>
                  </select>
                  <input type="text" class="form-control" placeholder="Skill" ng-model="skill.skillTitle" required>
                  <input type="text" class="form-control" placeholder="Image URL" ng-model="skill.image">
                  <textarea cols="30" rows="3" class="form-control" placeholder="Description of skill offered, your proficiency in the skill, and what you would like in return..." required ng-model="skill.description"></textarea>
                </form>
                <div ng-hide="currentUserData.loggedIn">
                  <p>Please Login or <a ui-sref="signup" data-dismiss="modal" class="signup">Sign Up</a> to post.</p>
                </div>
              </div ng-show="currentUserData.loggedIn">
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="postSkill()">Post</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- ui-view -->
      <div style="height: 50px;"></div>
      <div ui-view></div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="javascripts/sweetalert-dev.js"></script>
    <script type="text/javascript" src="javascripts/bundle.js"></script>
    </div>
  </body>
</html>
